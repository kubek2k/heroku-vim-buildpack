#!/bin/sh

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"

curl https://s3.amazonaws.com/heroku-jvm-buildpack-vi/vim-7.3.tar.gz -C - --output $CACHE_DIR/vim-7.3.tar.gz
mkdir $BUILD_DIR/vim && tar xzvf $CACHE_DIR/vim-7.3.tar.gz -C $BUILD_DIR/vim
cat "$ENV_DIR/PATH"
PATH=''
if [ -f $ENV_DIR/PATH ]; then
    PATH=`cat $ENV_DIR/PATH`
fi
echo "$PATH:$HOME/vim/bin" > $ENV_DIR/PATH
